<Window x:Class="Nihongo_Dictionary.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nihongo_Dictionary"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="20">
            <Label Content="Nume de utilizator:" />
            <TextBox x:Name="txtNewUsername" Margin="0,0,0,10" />

            <Label Content="Parolă:" />
            <PasswordBox x:Name="txtNewPassword" Margin="0,0,0,10" />

            <Label Content="Confirmare parolă:" />
            <PasswordBox x:Name="txtConfirmPassword" Margin="0,0,0,10" />

            <Button Content="Înregistrare" Click="btnRegister_Click" Padding="10" />
            <Button Content="Anulare" Click="btnCancel_Click" Padding="10" Margin="0,10,0,0" />
            <TextBlock x:Name="lblErrorMessage" Foreground="Red" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
