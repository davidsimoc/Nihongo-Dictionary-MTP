<UserControl x:Class="Nihongo_Dictionary.LessonsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nihongo_Dictionary"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="{StaticResource BackgroundColor}">
        <TextBlock Text="Lessons" Style="{StaticResource TitleTextStyle}" Margin="20"/>

        <Button Style="{StaticResource LessonCardStyle}" Tag="HiraganaRows" Click="HiraganaLessons_Click">
            <StackPanel>
                <TextBlock Text="Hiragana Basics" Style="{StaticResource LessonTitleStyle}"/>
                <TextBlock Text="Learn the fundamental Hiragana characters." Style="{StaticResource LessonDescriptionStyle}"/>
            </StackPanel>
        </Button>

        <Button Style="{StaticResource LessonCardStyle}" Tag="HiraganaRows" Click="KatakanaLessons_Click">
            <StackPanel>
                <TextBlock Text="Katakana Basics" Style="{StaticResource LessonTitleStyle}"/>
                <TextBlock Text="Master the Katakana writing system." Style="{StaticResource LessonDescriptionStyle}"/>
            </StackPanel>
        </Button>


    </StackPanel>
</UserControl>
