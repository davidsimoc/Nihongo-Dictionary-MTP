<UserControl x:Class="Nihongo_Dictionary.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Nihongo_Dictionary"
             Width="400" Height="500">
    <UserControl.Resources>
        <!-- Stil pentru TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Background" Value="#424242" />
            <Setter Property="BorderBrush" Value="#757575" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer Margin="0"
                                          x:Name="PART_ContentHost"
                                          Padding="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#81C784" />
                                <Setter Property="BorderThickness" Value="2" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stil pentru PasswordBox -->
        <Style TargetType="PasswordBox">
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Background" Value="#424242" />
            <Setter Property="BorderBrush" Value="#757575" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer Margin="0"
                                          x:Name="PART_ContentHost"
                                          Padding="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#81C784" />
                                <Setter Property="BorderThickness" Value="2" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="15" BorderBrush="Gray" BorderThickness="2" Background="#303030" Padding="10">
        <Grid Background="#303030">


        <!-- LOGIN PANEL -->
        <StackPanel x:Name="loginPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Autentificare" Foreground="White" FontSize="28" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock x:Name="user" Margin="0 0 0 10" Foreground="#E5E5E5" FontSize="16">Username</TextBlock>
            <TextBox x:Name="txtUsername" Margin="0,0,0,10" />
            <TextBlock x:Name="pass" Margin="0 0 0 10" Foreground="#E5E5E5" FontSize="16">Password</TextBlock>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,10" />

            <CheckBox x:Name="chkRememberMe" Content="Ține-mă minte" Foreground="White" Margin="0,0,0,10" />

            <Button Content="Login" Click="btnLogin_Click" Background="#81C784" Foreground="Black"
                    FontSize="18" Padding="10" BorderThickness="0" Margin="0,0,0,10" Cursor="Hand"/>

            <TextBlock x:Name="lblErrorMessage" Foreground="Red" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="Nu ai cont? Înregistrează-te aici." Foreground="#90CAF9" FontSize="14"
                       HorizontalAlignment="Center" Cursor="Hand" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"/>
        </StackPanel>

        <!-- REGISTER PANEL -->
        <StackPanel x:Name="registerPanel" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Width="300" Visibility="Collapsed">
            <TextBlock Text="Înregistrare" Foreground="White" FontSize="28" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>
                <TextBlock Margin="0 0 0 10" Foreground="#E5E5E5" FontSize="16">Username</TextBlock>
                <TextBox x:Name="txtNewUsername" Margin="0,0,0,10" />
                <TextBlock Margin="0 0 0 10" Foreground="#E5E5E5" FontSize="16">Password</TextBlock>

                <PasswordBox x:Name="txtNewPassword" Margin="0,0,0,10" />
                <TextBlock Margin="0 0 0 10" Foreground="#E5E5E5" FontSize="16">Confirm password</TextBlock>

                <PasswordBox x:Name="txtConfirmPassword" Margin="0,0,0,10" />

            <Button Content="Register" Click="btnRegister_Click" Background="#64B5F6" Foreground="White"
                    FontSize="18" Padding="10" BorderThickness="0" Margin="0,0,0,10" Cursor="Hand"/>

            <TextBlock x:Name="lblRegisterErrorMessage" Foreground="Red" FontSize="14" Margin="0,0,0,10"/>

                <TextBlock Text="Ai deja cont? Autentificare"
           Foreground="#90CAF9"
           FontSize="14"
           Cursor="Hand"
           TextAlignment="Center"
           MouseLeftButtonDown="btnSwitchToLogin_Click"
           HorizontalAlignment="Center" />
            </StackPanel>
    </Grid>
    </Border>
</UserControl>
